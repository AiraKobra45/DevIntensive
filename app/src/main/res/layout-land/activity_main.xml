<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">


    <android.support.design.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_coordinator_container"
        >
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    style="@style/header"
                    >
                    <LinearLayout
                        style="@style/header_left_side">
                        <TextView
                            style="@style/header_number"
                            android:text="10"/>
                        <TextView
                            style="@style/header_text"
                            android:text="Рейтинг"/>
                    </LinearLayout>
                    <View
                        style="@style/view_separator_vertical"
                        />
                    <LinearLayout
                        style="@style/header_center">
                        <TextView
                            style="@style/header_number"
                            android:text="10"/>
                        <TextView
                            style="@style/header_text"
                            android:text="Написано строк кода"/>
                    </LinearLayout>
                    <View
                        style="@style/view_separator_vertical"
                        />
                    <LinearLayout
                        style="@style/header_right_side">
                        <TextView
                            style="@style/header_number"
                            android:text="10"/>
                        <TextView
                            style="@style/header_text"
                            android:text="Проектов"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="@dimen/size_big_72"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:layout_marginLeft="@dimen/spacing_medium_32"
                            android:layout_marginRight="@dimen/spacing_normal_16">
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/phone_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_phone"
                                    android:inputType="phone"
                                    android:text="8(924)876-09-95"
                                    android:enabled="false"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/grey"
                                    android:focusable="false"
                                    />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"
                        />
                </LinearLayout>

                <View
                    style="@style/view_separator_horizontal"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_black_24dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="@dimen/size_big_72"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/email_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_email"
                                android:inputType="textEmailAddress"
                                android:text="AiraKobra45@yandex.ru"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:focusable="false"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"
                        />
                </LinearLayout>

                <View
                    style="@style/view_separator_horizontal"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_vk_circle"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="@dimen/size_big_72"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/vk_profile_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_vk_profile"
                                android:inputType="textWebEditText"
                                android:text="vk/AiraKobra45"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:focusable="false"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_remove_red_eye_black_24dp"
                        />
                </LinearLayout>

                <View
                    style="@style/view_separator_horizontal"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_github_circle"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="@dimen/size_big_72"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/repository_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_repository"
                                android:inputType="textWebEditText"
                                android:text="github.com/AiraKobra45/DevIntensive"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:focusable="false"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_remove_red_eye_black_24dp"
                        />
                </LinearLayout>

                <View
                    style="@style/view_separator_horizontal"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:layout_marginBottom="@dimen/spacing_small_8">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32"
                        android:layout_marginRight="@dimen/spacing_normal_16">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/about_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_about_me"
                                android:inputType="textMultiLine"
                                android:text="Буду описывать здесь всё что я знаю о себе. А также то, что про меня говорят остальные, но только плохое :)Описани е о себе...  кто где когда чего зачем и т.п. Описани е о себе...  кто где когда чего зачем и т.п. Описани е о себе...  кто где когда чего зачем и т.п."
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:focusable="false"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_remove_red_eye_black_24dp"
                        />
                </LinearLayout>
                <View
                    style="@style/view_separator_horizontal"
                    />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>